<h1 class="title">
  {{auth.user.firstName}} {{auth.user.lastName}}
</h1>

{{#if auth.isAdmin}}
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      {{#link-to 'communities.new' class="tile is-child is-danger notification is-primary"}}
        <p class="title">
          {{t 'me.community.title'}}
        </p>
        <p class="subtitle">
          {{t 'me.community.subtitle'}}
        </p>
      {{/link-to}}
    </div>
    <div class="tile is-parent">
      {{#link-to 'competitions.new' class="tile is-child is-danger notification is-primary"}}
        <p class="title">
          {{t 'me.competition.title'}}
        </p>
        <p class="subtitle">
          {{t 'me.competition.subtitle'}}
        </p>
      {{/link-to}}
    </div>
  </div>
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      {{#link-to 'betting-games.new' class="tile is-child is-danger notification is-primary"}}
        <p class="title">
          {{t 'me.bettingGame.title'}}
        </p>
        <p class="subtitle">
          {{t 'me.bettingGame.subtitle'}}
        </p>
      {{/link-to}}
    </div>
  </div>
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      <article class="tile is-child is-danger notification is-primary">
        <p class="title">
          {{t 'me.setCurrentCompetition.title'}}
        </p>
        <p class="subtitle">
          {{t 'me.setCurrentCompetition.subtitle'}}
        </p>
        <div class="content">
          <p>{{t 'me.setCurrentCompetition.theCurrentCompetitionIs'}} TODO.</p>
          <div class="select is-danger"> <!-- isLoading -->
            <select>
              <option selected disabled value="">
                {{t 'me.setCurrentCompetition.placeholder'}}
              </option>
            </select>
          </div>
        </div>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child is-danger notification is-primary">
        <p class="title">
          {{t 'me.updateCompetitionAndTeams.title'}}
        </p>
        <p class="subtitle">
          {{t 'me.updateCompetitionAndTeams.subtitle'}}
        </p>
        <div class="content">
          <button class="button is-danger is-inverted" {{action 'updateCurrentCompetition'}}>
            {{t 'me.updateCompetitionAndTeams.title'}}
          </button>
        </div>
      </article>
    </div>
  </div>
{{else}}
  <p>GH-45 is waiting for you.</p>
{{/if}}

{{outlet}}
