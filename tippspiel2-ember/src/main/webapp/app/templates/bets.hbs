<h1 class="title is-hidden-desktop">
  {{t 'app.bets'}}
</h1>

<div class="columns is-multiline">
  {{#each model as |bet|}}
    <div class="column is-one-third-tablet is-one-quarter-widescreen">
      {{#bet-card bet=bet hideUser=true}}
      {{/bet-card}}
    </div>
  {{else}}
    <div class="column">
      {{t 'bets.none'}}
    </div>
  {{/each}}
</div>

