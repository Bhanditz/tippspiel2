<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <div class="select is-primary">
        <select onchange={{action "changeBettingGame" value="target.value"}}>
          <option value={{bettingGame.currentBettingGame.id}} selected>
            {{bettingGame.currentBettingGame.name}}
          </option>
          {{#each otherBettingGames as |otherBettingGame|}}
            <option value={{otherBettingGame.id}}>
              {{otherBettingGame.name}}
            </option>
          {{/each}}
        </select>
      </div>
      {{#burger-menu class="navbar-burger" data-target="navMenu"}}
        <span></span>
        <span></span>
        <span></span>
      {{/burger-menu}}
    </div>
    <div class="navbar-menu" id="navMenu">
      <div class="navbar-start">
        {{#link-to "standings" class="navbar-item"}}
          Standings
        {{/link-to}}
        {{#link-to "bets" class="navbar-item"}}
          Bets
        {{/link-to}}
      </div>
      <div class="navbar-end">
        {{#if auth.user}}
          {{#link-to "me" class="navbar-item"}}
            {{auth.user.firstName}}
          {{/link-to}}
          <a class="navbar-item" {{action 'signOut'}}>
            Sign Out
          </a>
        {{else}}
          {{#link-to "sign-up" class="navbar-item"}}
            Sign Up
          {{/link-to}}
          {{#link-to "sign-in" class="navbar-item"}}
            Sign In
          {{/link-to}}
        {{/if}}
        <a class="navbar-item small-caps" {{action 'toggleLocale'}}>
          <span class="{{unless model.localeIsEnUs "has-text-weight-bold"}}">de</span>/<span
          class="{{if model.localeIsEnUs "has-text-weight-bold"}}">en</span>
        </a>
      </div>
    </div>
  </div>
</nav>
<div class="section">
  <div class="container">
    {{outlet}}
  </div>
</div>
